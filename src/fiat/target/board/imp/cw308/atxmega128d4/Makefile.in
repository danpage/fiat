INCLUDES   += ${FIAT_DEPS}/chipwhisperer/firmware/mcu/hal
INCLUDES   += ${FIAT_DEPS}/chipwhisperer/firmware/mcu/hal/xmega

 SOURCES   += ${FIAT_DEPS}/chipwhisperer/firmware/mcu/hal/xmega/XMEGA_AES_driver.c 
 SOURCES   += ${FIAT_DEPS}/chipwhisperer/firmware/mcu/hal/xmega/uart.c
 SOURCES   += ${FIAT_DEPS}/chipwhisperer/firmware/mcu/hal/xmega/usart_driver.c
 SOURCES   += ${FIAT_DEPS}/chipwhisperer/firmware/mcu/hal/xmega/xmega_hal.c

 TARGETS   += ${FIAT_BUILD}/target/${FIAT_BOARD}/target.elf 
 TARGETS   += ${FIAT_BUILD}/target/${FIAT_BOARD}/target.bin 
 TARGETS   += ${FIAT_BUILD}/target/${FIAT_BOARD}/target.hex

GCC_PREFIX  = avr-

# 1.  option-related => class 1: architecture
GCC_FLAGS  += -mmcu="atxmega128d3"
# 1.  option-related => class 2: compiler
GCC_FLAGS  += -Os -Wall -std="gnu11" -ffreestanding -funsigned-char -funsigned-bitfields -fshort-enums -fvisibility="hidden" -ffunction-sections -fpack-struct
# 1.  option-related => class 3: linker
GCC_FLAGS  +=
# 2.    path-related
GCC_PATHS  +=
# 3. library-related
GCC_LIBS   += -lm 
# 4.  define-related (e.g., configuration of HAL, BSP, etc.)
GCC_DEFS   += -DPLATFORM="CW303" -DHAL_TYPE="HAL_xmega" -DSS_VER="1" -DF_CPU="7372800UL"

# -----------------------------------------------------------------------------

fetch-deps :
	@git clone https://github.com/newaetech/chipwhisperer.git ${FIAT_DEPS}/chipwhisperer
	@git -C ${FIAT_DEPS}/chipwhisperer checkout d38eae52080fab801624e905046a5ee042da560f
	@git -C ${FIAT_DEPS}/chipwhisperer submodule update --init --recursive

patch-deps :

build-deps :

clean-deps : 
	@rm --force --recursive ${FIAT_DEPS}

# -----------------------------------------------------------------------------

${FIAT_BUILD}/target/${FIAT_BOARD}/%.o : %.c
	@${GCC_PREFIX}gcc $(patsubst %, -I %, ${INCLUDES}) ${GCC_PATHS} ${GCC_FLAGS} ${GCC_DEFS} -c -o ${@} ${<}
${FIAT_BUILD}/target/${FIAT_BOARD}/%.o : %.s
	@${GCC_PREFIX}gcc $(patsubst %, -I %, ${INCLUDES}) ${GCC_PATHS} ${GCC_FLAGS} ${GCC_DEFS} -c -o ${@} ${<}
${FIAT_BUILD}/target/${FIAT_BOARD}/%.o : %.S
	@${GCC_PREFIX}gcc $(patsubst %, -I %, ${INCLUDES}) ${GCC_PATHS} ${GCC_FLAGS} ${GCC_DEFS} -c -o ${@} ${<}

${FIAT_BUILD}/target/${FIAT_BOARD}/%.elf ${FIAT_BUILD}/target/${FIAT_BOARD}/%.map : ${OBJECTS}
	@${GCC_PREFIX}gcc $(patsubst %, -I %, ${INCLUDES}) ${GCC_PATHS} ${GCC_FLAGS} ${GCC_DEFS} -Wl,-Map="${FIAT_BUILD}/target/${FIAT_BOARD}/${*}.map" -o ${FIAT_BUILD}/target/${FIAT_BOARD}/${*}.elf ${^} ${GCC_LIBS}
${FIAT_BUILD}/target/${FIAT_BOARD}/%.bin                                          : ${FIAT_BUILD}/target/${FIAT_BOARD}/%.elf
	@${GCC_PREFIX}objcopy ${OBJCOPY_FLAGS} --output-target="binary" ${<} ${@}
${FIAT_BUILD}/target/${FIAT_BOARD}/%.hex                                          : ${FIAT_BUILD}/target/${FIAT_BOARD}/%.elf
	@${GCC_PREFIX}objcopy ${OBJCOPY_FLAGS} --output-target="ihex"   ${<} ${@}

# -----------------------------------------------------------------------------

program-jtagmkii :
	@${FIAT_HOME}/src/fiat/target/board/imp/${FIAT_BOARD}/script/program-jtagmkii.sh $(filter %.hex, ${TARGETS})

# =============================================================================
